#! /usr/bin/env bash

# vbox up [-d|null] :vname

# check vname availability

if [[ -z "$vname" ]]
then
	echo "Missing virtual machine name"
	exit 1
fi

# resolve vname
resolve_vname $vname

# check physical state
is_vm_running

# Warning message if already powerred
if [[ $? -eq 0 ]]
then
	echo -e "Virtual machine [\"${vname}\"] already on.\nConsider:\n    - [connect] - Connecting to it through ssh\n    - [down] - Shutting it down"
	exit 1
fi

# check and create if config does not exists
check_and_create_if_not_exists

# change vname state into: pending
set_attr state pending

# launch vm
start_vm

if [[ $? -ne 0 ]]
then
	set_attr state idle
	echo "Error occured while starting the virtual machine [\"${vname}\"]"
	exit 1
fi

# auto_close option
declare -xg auto_close="true"

# detach option provided ?
option_key_exists 'd'

if [[ $? -eq 0 ]]
then

	auto_close="false"

	# prevent auto_close on connection exit if (-i:interactive is) provided
	option_key_exists 'i'


	if [[ $? -ne 0 ]]
	then

		exit 0
	fi
fi

declare -i rcode=0

connect_vm_host

rcode=$?

# check if the network is still up running
is_vm_running

if [[ $? -eq 0 ]]
then

	if [[ "${auto_close}" == "true" ]]
	then

		stop_vm
	fi
fi

exit $rcode


