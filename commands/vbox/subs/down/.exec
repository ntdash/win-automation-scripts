#! /usr/bin/env bash

# check vname availability

[[ -z "${vname}" ]] && r_quit 1 "Missing virtual machine name"

# resolve vname
resolve_vm_name $vname

# check physical state
is_vm_running

# quit if vname is not a running virtual machine
if [[ $? -ne 0 ]]
then
	r_quit 1 "Virtual machine [\"${vname}\"] not running."
fi

# close it
stop_vm
